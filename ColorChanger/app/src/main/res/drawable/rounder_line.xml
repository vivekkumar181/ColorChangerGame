<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#c18556" />
            <gradient android:angle="-90" android:startColor="#fafafa" android:endColor="#f7f7f6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#e4b139" />
            <solid android:color="#fafafa"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#fbfdfc" />
            <gradient android:angle="-90" android:startColor="#f8f5fc" android:endColor="#eaebef" />
        </shape>
    </item>
</selector>